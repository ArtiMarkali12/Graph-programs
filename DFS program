int main()
{
	int a[10][10],n,i,j;
	printf("\n ENTER THE VERTICES:");
	scanf("%d",&n);
	printf("\n enter the edges in Matrix format:\n ");
	for(i=1;i<=n;i++)
	{
	for(j=1;j<=n;j++)
	{
	scanf("%d",&a[i][j]);
	}
	}
	printf("\n The Adjacency matrix:\n");
	for(i=1;i<=n;i++)
	{
	printf("\t V%d",i);
	}
	for(i=1;i<=n;i++)
	{
	printf("\n V%d",i);
	for(j=1;j<=n;j++)
	{
	printf("\t%d",a[i][j]);
	}
	printf("\n");
	}
	printf("\n\n BFS Treaversal is:");
	bfs(a,n);
}
